{
  "name": "cc-obsidian-mem",
  "version": "0.3.0",
  "description": "Obsidian-based persistent memory system for Claude Code",
  "type": "module",
  "scripts": {
    "build": "bun build src/mcp-server/index.ts --outdir dist/mcp-server --target bun",
    "build:http": "bun build src/mcp-server/http-server.ts --outdir dist --target bun",
    "dev:mcp": "bun --watch src/mcp-server/index.ts",
    "dev:http": "bun --watch src/mcp-server/http-server.ts",
    "start:http": "bun run dist/http-server.js",
    "docker:build": "docker build -t cc-obsidian-mem .",
    "docker:run": "docker compose up -d",
    "test": "bun test",
    "setup": "bun src/cli/setup.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.3",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@types/express": "^5.0.6",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  },
  "author": "Mark Huang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Z-M-Huang/cc-obsidian-mem"
  },
  "keywords": [
    "claude-code",
    "obsidian",
    "memory",
    "knowledge-base",
    "mcp"
  ]
}
